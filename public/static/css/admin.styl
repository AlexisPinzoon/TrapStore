body
    background-color: #f5f6fa
    font-size  14px
    font-family: 'Source Sans Pro', sans-serif;

h2,h3,h4,ul,body,html
    padding 0px
    margin 0px
    font-family: 'Source Sans Pro', sans-serif;

.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position: relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #fff
    min-height 100vh
    font-size 16px
    .section-top
        background-color rgb(239, 245, 239)
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
        display block
        margin 0px auto
        padding-top 22px
        width 60%
    .user
        color rgb(18, 11, 11)!important
        padding 16px
        a
            color #0e0d0d
            font-size 1.8em

    .main
        display block
        margin-top 8px
        height: 100vh;
        overflow-y: auto;
        ul
            li
                margin-bottom 4px
                a
                    color rgb(16, 17, 16)!important
                    display block
                    font-size 1.1em
                    padding 12px 12px
                    text-decoration none !important

                    i
                        margin-right 10px
                    &:hover
                        background-color: rgb(0, 0, 0)
                        box-shadow 0 0.5rem 1rem rgb(255, 255, 255)
                        color rgb(255, 242, 242)!important
                        font-size 18px
                a.active
                    background-color: rgb(0, 0, 0)
                    box-shadow 0 0.5rem 1rem rgb(255, 255, 255)
                    color rgb(255, 242, 242)!important
                    font-size 18px
.navbar
    background-color rgb(255, 253, 253)
    font-size 16px
    a
        color rgb(0, 0, 0)!important
.page
    padding-top 16px
    padding-bottom 16px
    margin-top 8px
    .breadcrumb
        margin-bottom 4px
        padding-bottom 16px
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important
        color rgb(255, 255, 255)
        font-size: 16px
        .breadcrumb-item
            background-color #ffffff
            a
                background-color rgb(255, 255, 255)!important
                color rgb(0, 0, 0)
                text-decoration none !important

    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid rgb(0, 0, 0)
        width 100%
        .header
            border-bottom 1px solid #000000
            h2.tittle
                display inline-block
                color rgb(0, 0, 0)
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid rgb(0, 0, 0)
                    margin-right 8px
                    color: rgb(0, 0, 0);
                    &:hover
                        background-color: rgb(0, 0, 0)
                        color rgb(240, 245, 240)

.opts
    a
        border-radius 4px
        border 1px solid #dedede
        display inline-block
        padding 8px 12pxs
        color rgb(0, 0, 0);
        font-size 18px
.mtop16
    margin-top 16px
    font-size 18px


.label {
    font-size: 16px !important
}


.user
    margin-right: 100px

.btn-primary,
.btn-primary:hover {
    background-color: rgb(0, 0, 0)
    border-color: rgb(0, 0, 0)
    color rgb(240, 245, 240)
}


.product_gallery
    overflow: hidden
    .btn-submit
        display block
        margin-right: 1%
        width: 100%
        a
            border 1px dashed #6666
            border-radius: 4px
            color #333
            display block
            font-size: 1.5em
            text-align: center
            padding: 12px
            width: 100%
            &:hover
                background-color: #ffffff
                color #333

    .tumbs
        overflow: hidden
        .tumb
            float left
            margin-top: 16px
            position relative
            width: 48%
            a
                background-color: rgba(0,0,0,.5)
                border-radius: 50%
                display: inline-block
                color: #fff
                padding: 6px 10px
                position absolute
                bottom: 8px
                right: 8px
            img
                border-radius: 4px
                width 100%
            &:nth-child(odd)
                margin-right: 4%

.page_user
    .mini_profile
        .avatar
            display block
            margin 0px auto
            border-radius 50%
            width 150px

.page_user .mini_profile .info {
    background-color: #fff;
}

.page_user .mini_profile .info span {
    display: block;
    font-size: 1.2em;
    width: 100%;
    font-weight: bold;
}

.page_user .mini_profile .info span.title {
    font-weight: bold;
    margin-top: 16px;
}

.page_user .mini_profile .btn{
    margin-top: 16px;
    width: 100%
}

