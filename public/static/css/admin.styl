body
    background-color: #f5f6fa
    font-size  14px
    font-family: 'Source Sans Pro', sans-serif;

h2,h3,h4,ul,body,html
    padding 0px
    margin 0px
    font-family: 'Source Sans Pro', sans-serif;

.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position: relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #fff
    min-height 100vh
    font-size 16px
    .section-top
        background-color rgb(84, 86, 84)
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
        display block
        margin 0px auto
        padding-top 22px
        width 60%
    .user
        color #fff !important
        padding 16px
        a
            color #fff
            font-size 1.8em

    .main
        display block
        margin-top 8px
        ul
            li
                margin-bottom 4px
                a
                    color rgb(6, 7, 6)!important
                    display block
                    font-size 1.1em
                    padding 12px 12px
                    i
                        margin-right 10px
                    &:hover
                        background-color: rgb(84, 86, 84)
                        box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
                        color #fff !important
                        text-decoration none !important
                        font-size 18px

.navbar
    background-color rgb(84, 86, 84)
    font-size 16px
    a
        color #fff !important
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
        font-size: 16px

        .breadcrumb-item
            a
             color rgba(0, 0, 0, 0.10) !important

                &:hover
                    text-decoration none !important


    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid rgb(105, 112, 105)
        width 100%
        .header
            border-bottom 1px solid #5e5b5b
            h2.tittle
                display inline-block
                color rgb(84, 86, 84)
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid rgb(84, 86, 84)
                    margin-right 8px
                    color: rgb(52, 47, 47);
                    &:hover
                        background-color: rgb(84, 86, 84)
                        color rgb(240, 245, 240)
