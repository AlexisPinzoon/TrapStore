body
    background-color: #f6f6f6
    margin 0px

.mtop16
    margin-top 16px
.box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position absolute
    padding: 16px
    width: 500px
    .btn-success
        background-color: #008000
        border 0px
        width 100%
    .form-control
        &:focus
        &:active
            outline none
    
    .inside
        padding: 16px
    .header
        padding: 16px
        border-radius: 8px 8px 0px 0px
        a
            img
                display: block
                margin 0px auto
                width 40%
    
    .footer
        a
            display: inline-block
            &:last-chlid
                margin-left: 24px

.box_login
    left 50%
    top 50%
    transform translate(-50%,-50%)

.box_register
    left 50%
    top 50%
    transform translate(-50%,-50%)